{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    "*.css": "postcss"
  },
  "files.exclude": {
    "**/.next": true,
    "**/.turbo": true,
    "**/node_modules": true
  }
}
